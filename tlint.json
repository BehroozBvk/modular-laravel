{
    "extends": "tslint:recommended",
    "rules": {
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "no-console": false,
        "object-literal-sort-keys": false,
        "curly": true,
        "triple-equals": [
            true,
            "allow-null-check"
        ]
    },
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts",
            "dist/**/*.ts"
        ]
    }
}