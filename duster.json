{
    "include": [
        "bin",
        "scripts",
        "src",
        "tests",
        "Modules"
    ],
    "paths": [
        "app",
        "routes",
        "Modules"
    ],
    "exclude": [
        "database/migrations",
        "tests",
        "Modules/**/database/migrations"
    ],
    "analysis": {
        "unused_code": true,
        "orphan_files": true
    },
    "threshold": {
        "unused_classes": 0,
        "unused_functions": 0
    },
    "scripts": {
        "lint": {
            "phpstan": [
                "./vendor/bin/phpstan",
                "analyse"
            ]
        }
    }
}